<h2>Books</h2>


<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>
  
  <tr>
  <% @books.each do |book| %>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to "Show", book_path(book.id) %></td>
    <td><%= link_to "Edit", edit_book_path(book.id) %></td>
    <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
  </tr>
  <% end %>
  
  
</table>



<div class="table-new">
  <h2>New book</h2>
  
  <% if @book.errors.any? %>
    <%= @book.errors.count %>errors prohibited this book from being saved:
    <% @book.errors.full_messages.each do |message| %>
    <%= message %>
    <% end %>
    <% end %>
  
  <%= form_with model:@book, local:true do |f| %>
  
  
  
    <p class="table-title-create">Title</p>
    <div class="table-text-field"><%= f.text_field :title %></div>
    <p class="table-body-create">Body</p>
    <div class="table-text-area"><%=f.text_area :body %></div>
    <p class="table-createaction"><%= f.submit "Create Book" %></p>
  <% end %>
</div>


